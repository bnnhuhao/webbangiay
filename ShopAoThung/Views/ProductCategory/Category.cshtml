@model ShopAoThung.Models.Mcategory
@{
    ViewBag.Title = @Model.name;
    Layout = "~/Views/Shared/_layoutSite.cshtml";
}
<div class="container">
    <div class=" row">
        <div class="col-md-3 mt-2">
            <div class="side-bar ">
                <!--preference -->
                <div class="left-side danhmuc ">
                    <h3 class="shopf-sear-headits-sear-head">
                        Danh mục
                    </h3>
                    <ul>
                        @foreach (var list in ViewBag.category)
                        {
                            <li>
                                <a href="#">@list.name </a>

                            </li>
                        }

                       
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-md-9">

            <div class="product-cat-title">
                @Html.Action("Subcategory", "ProductCategory", new { catid = @Model.ID })
            </div>


        </div>
    </div>

</div>